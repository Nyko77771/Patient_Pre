<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Prescriptions</title>
    <link rel="stylesheet" href="./css/style.css" />

    <!-- Font Awesome Link -->
    <script
      src="https://kit.fontawesome.com/11d40861b7.js"
      crossorigin="anonymous"
    ></script>

    <!-- My Script -->
    <script src="./../javascript/prescriptions.js"></script>
  </head>
  <body>
    <div class="container">
      <header class="preHeader">
        <nav class="navigation">
          <ul>
            <li>
              <div class="tooltip">
                <input
                  type="button"
                  value="Log-out"
                  class="logOut"
                  id="logOut"
                />
                <span class="tooltiptext">Log-Out from App.</span>
              </div>
              <div class="tooltip">
                <i class="fa-solid fa-user userDetail" id="userDetails"></i>
                <span class="tooltiptext">See User Details</span>
              </div>
            </li>
          </ul>
        </nav>
      </header>
      <div class="title">
        <h1>Active Prescriptions</h1>
        <hr class="titleLine" />
      </div>
      <div class="preSummary">
        <div class="summaryDescription">
          <table>
            <thead>
              <tr class="tUnderline">
                <th>1&rpar; Doctor Name</th>
                <th>2&rpar; Medication</th>
                <th>3&rpar; Details</th>
              </tr>
            </thead>
            <tbody class="preTbody">
              <% if(prescriptions.length > 0){%> <%
              prescriptions.forEach(prescription => {%>
              <tr>
                <td><%= prescription.DoctorName %></td>
                <td><%= prescription.MedicationName %></td>
                <td>
                  <button
                    onclick="showDetails('<%= prescription %>')"
                    name="details"
                    value="Details"
                    class="preBtn"
                  >
                    Details
                  </button>
                </td>
              </tr>
              <% }); %> <% } else {%>
              <tr>
                <td colspan="3">No Active Prescriptions Found</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="preDetail"></div>
    </div>
    <footer></footer>
  </body>
</html>
